@{
    ViewBag.Title = "Budget";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css{
    @Styles.Render("~/Budget-CSS")
    <link rel="stylesheet" type="text/css" href="../../../app-assets/css/pages/app-chat-list.css">
}

<section id="basic-horizontal-layouts">
    <div class="row match-height">
        <div class="col-md-6 col-12" style="padding-right:0px">
            <div class="card card-browser-states" style="height: 475.547px;">
                <div class="card-header">
                    <ul class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="Monthly-tab" data-toggle="tab" href="#montlhy-tab" aria-controls="home" role="tab" aria-selected="true">MONTHLY</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="Category-tab" data-toggle="tab" href="#category-tab" aria-controls="profile" role="tab" aria-selected="false">CATEGORY</a>
                        </li>
                    </ul>
                    <div>
                        <span id="nav-year-previous" class="navYear CursorPointer" data-action="previous"><i class="fa fa-chevron-left"></i></span>
                        <b class="value" id="Year"></b>
                        <span id="nav-year-next" class="navYear CursorPointer" data-action="next"><i class="fa fa-chevron-right"></i></span>
                    </div>
                </div>
                <div class="card-body h-100">
                    <div class="tab-content">
                        <div class="tab-pane active" id="montlhy-tab" aria-labelledby="Monthly-tab" role="tabpanel">
                            <div class="card card-transaction" id="divMonthly">
                            </div>
                        </div>
                        <div class="tab-pane" id="category-tab" aria-labelledby="Category-tab" role="tabpanel">
                            <div class="card card-transaction">
                                <div class="row">
                                    <div class="col-6">
                                        <span id="nav-month-previous" class="navMonth CursorPointer" data-action="previous"><i class="fa fa-chevron-left"></i></span>
                                        <b class="value" id="Month"></b>
                                        <span id="nav-month-next" class="navMonth CursorPointer" data-action="next"><i class="fa fa-chevron-right"></i></span>
                                    </div>
                                    <div class="col-6" style="text-align: right;">
                                    </div>
                                </div>
                                <div class="divider">
                                    <div class="divider-text"><i class="fa fa-list-alt"></i></div>
                                </div>
                                <div class="card card-transaction" id="divCategory">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="div-bottom">
                        <button type="button" class="btn btn-icon btn-md rounded-circle btn-primary waves-effect" id="btnAdd">
                            <i class="fa fa-plus"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-12">
            <div class="card card-app-design">
                <div class="card-header">
                    <h4 class="card-title">Details</h4>
                </div>
                <div class="card-body" style="display:none" id="divDetail">
                    <h4 class="card-title mt-1 mb-75" id="TitleDetail"></h4>
                    <div class="design-planning-wrapper">
                        <div class="design-planning">
                            <p class="card-text mb-25">Budget</p>
                            <h6 class="mb-0" id="BudgetDetail">12 Apr, 21</h6>
                        </div>
                        <div class="design-planning">
                            <p class="card-text mb-25">Expense</p>
                            <h6 class="mb-0" id="ExpenseDetail">$49251.91</h6>
                        </div>
                        <div class="design-planning">
                            <p class="card-text mb-25">Remaining</p>
                            <h6 class="mb-0" id="RemainingDetail">$840.99</h6>
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="row d-flex justify-content-center text-center">
                            <div class="col-sm-4 m-b-5 ReadAndWrite">
                                <button type="button" id="btnEdit" class="btn btn-info btn-block ReadAndWrite"><span class="fa fa-edit"></span><span class="btnLabel"> Edit</span></button>
                            </div>
                            <div class="col-sm-4 m-b-5 DeleteEnabled">
                                <button type="button" id="btnDelete" class="btn btn-danger btn-block DeleteEnabled"><span class="fa fa-trash"></span><span class="btnLabel"> Delete</span></button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<div class="modal fade " id="mdlForm" role="dialog" aria-hidden="true" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-lg" id="" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="mdlTitle"> Budget Form</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form data-parsley-validate="true" id="frmBudget">
                <div class="modal-body">

                    <div class="row" id="divCatergoryFrm">
                        <div class="col-md-6 col-12">
                            <div class="mb-1">
                                <label class="form-label" for="Expenses">Expenses</label>
                                <input type="hidden" id="ID" name="ID" class="form-control input">
                                <select id="Expenses" name="Expenses" class="form-control input" required data-parsley-errors-container="#err-Expenses"></select>
                            </div>
                            <div id="err-Expenses"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-12">
                            <div class="mb-1">
                                <label class="form-label" for="InputDate"><i class="feather icon-calendar"></i></label>
                                <input type="text" id="InputDate" name="InputDate" class="form-control input pickadate-months-year" placeholder="InputDate" required data-parsley-errors-container="#err-InputDate" data-parsley-maxlength="200" maxlength="200" autocomplete="off">
                            </div>
                            <div id="err-InputDate"></div>
                        </div>
                        <div class="col-md-6 col-12">
                            <div class="mb-1">
                                <label class="form-label" for="Amount"><i class="fa fa-money-bill-wave"></i></label>
                                <input type="text" id="Amount" name="Amount" class="form-control input decimal-format" placeholder="Amount" required data-parsley-errors-container="#err-Amount" data-parsley-maxlength="200" maxlength="200" autocomplete="off">
                            </div>
                            <div id="err-Amount"></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-12">
                            <div class="mb-1">
                                <br />
                                <div class="custom-control custom-switch custom-control-inline">
                                    <input type="checkbox" class="custom-control-input" id="Status" name="Status">
                                    <label class="custom-control-label" for="Status">Rollover remaining budget to next month</label>
                                </div>
                            </div>

                            <div id="err-Amount"></div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" id="btnSaveForm"><span class="fa fa-save"></span> <span class="btnLabel"> Save</span></button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal"><span class="fa fa-times"></span> Close</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section scripts{
    @Scripts.Render("~/Budget-JS")
    <script src="~/Content/app-assets/vendors/js/charts/apexcharts.min.js"></script>
    @*<script src="~/Content/app-assets/js/scripts/cards/card-advance.js"></script>*@
}
