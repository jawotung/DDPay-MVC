@{
    ViewBag.Title = "Reset Password";
    ViewBag.Image = "/Content/app-assets/fonts/Sel-Icons/DDP Icons/Illustrations/reset-password.png";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@section css{
    @Styles.Render("~/ResetPassword-CSS")
    <style>
        .feather-24 {
            width: 24px;
            height: 24px;
        }
    </style>
}
<div class="col-12 col-sm-8 col-md-6 col-lg-12 px-xl-2 mx-auto">
    <img src="~/Content/app-assets/fonts/Sel-Icons/DDP Icons/ddp logo.png" style="width:50px;padding-bottom:20px" />
    <br />
    <a href="@Url.Action("Index", "Login" )" style="font-size: 14px; font-weight: 500; color: #7573b6;">
        <i class="icons8-purple-back"></i> Back to login
    </a>
    <h2 class="card-title font-weight-bold mb-1" style="font-size: 32px; font-weight: 700!important; color: #25215e;line-height:48px">Reset Password</h2>
    <p class="card-text mb-2" style="width: 340px;font-size: 16px;color: #545254;">Please type in your new password below.</p>
    <div class="alert alert-danger" role="alert" id="ErrorAlert" style="display:none">
        <h4 class="alert-heading">Error:</h4>
        <div class="alert-body" id="ErrorList">
        </div>
    </div>
    <form class="auth-login-form mt-2" data-parsley-validate="true" id="frmLogin">
        <div class="form-group">
            <div class="d-flex justify-content-between">
                <label for="login-password">Password</label></a>
            </div>
            <div class="input-group input-group-merge form-password-toggle">
                <div class="input-group mb-2" style="margin-bottom: 0px!important;">
                    <div class="input-group-prepend">
                        <span class="input-group-text icons8-lgrey-lock" id="basic-addon1"></span>
                    </div>
                    <input class="form-control form-control-merge" id="Password" type="password" name="Password" required placeholder="············" aria-describedby="password" tabindex="2" />
                    <div class="input-group-append">
                        <span class="input-group-text cursor-pointer btnEye" data-password="Password">
                            <i class="icons8-eye-lgrey"></i>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="d-flex justify-content-between">
                <label for="password">Retype new password</label></a>
            </div>
            <div class="input-group input-group-merge form-password-toggle">
                <div class="input-group mb-2" style="margin-bottom: 0px!important;">
                    <div class="input-group-prepend">
                        <span class="input-group-text icons8-lgrey-lock" id="basic-addon1"></span>
                    </div>
                    <input class="form-control form-control-merge" id="ResetPassword" type="password" name="ResetPassword" required placeholder="············" aria-describedby="password" tabindex="2" />
                    <div class="input-group-append">
                        <span class="input-group-text cursor-pointer btnEye" data-password="ResetPassword">
                            <i class="icons8-eye-lgrey"></i>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <button class="btn btn-primary btn-block" tabindex="4" style="font-size: 16px; font-weight: 500; color: #979597;">Reset pasword</button>
    </form>
</div>
@section scripts{
    @Scripts.Render("~/ResetPassword-JS")
}

